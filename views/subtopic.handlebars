<div class="container text-center">
    <div class="row p-3">
        <div class="subtopic-section col" id="unknown">
            <p>Things I Don't Know</p>
                {{#each subtopics as |subtopic| }}
                {{#if (sortStatus status 1) }}
                {{> subtopic-cards}}
                {{/if}}
                {{/each}}
        </div>
        <div class="subtopic-section col" id="neutral" >
            <p>Neutral</p>
                {{#each subtopics as |subtopic| }}
                {{#if (sortStatus status 2) }}
                {{> subtopic-cards}}
                {{/if}}
                {{/each}}
        </div>
        <div class="subtopic-section col" id="known">
            <p>Things I Know</p>
                {{#each subtopics as |subtopic| }}
                {{#if (sortStatus status 3) }}
                {{> subtopic-cards}}
                {{/if}}
                {{/each}}
        </div>
    </div>
</div>
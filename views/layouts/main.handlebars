  <body class="body">
    <header class="header">
      <a href="/">
      <img id="logo" src="/assets/STUDY-BUDDIDES-LOGO.png" alt="" />
      </a>
      <h1 class="heading">The Study Buddy</h1>
      <div class="dropdown">
        <button class="btn dropbox" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-list-stars" style="font-size: 6vh"></i>
        </button>
        <ul class="dropdown-menu">
          {{#if loggedIn}}
            <li>
              <a class="dropdown-item" href="/">Home</a>
            </li>
                <a class="dropdown-item" href="/" id="logoutBtn">Logout</a>
            </li>
          {{else}}
            <li>
              <a href="/api/users/login">login</a>
            </li>
          {{/if}}
        </ul>
      </div>
    </header>
    <main>
      <div class="modal fade" id="mymodal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modal-title"></h5>
          </div>
          <div class="modal-body"></div>
          <div class="modal-footer">
            <button id="cancel" type="button" class="btn btn-secondary" data-dismiss="mymodal">Close</button>
            <button type="button" class="btn btn-primary" id="saveBtn">Save changes</button>
          </div>
        </div>
      </div>
    </div>
      {{{body}}}
     <div class="card-container">
      <button id="add">Add a new topic here</button>
      </div>

    </main>
